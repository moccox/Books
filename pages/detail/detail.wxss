/* pages/detail/detail.wxss */
/*背景*/
.background{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column
}

/*标题*/
.title{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0 20rpx #444;
}

/*隐藏，用于切换模式（收书、送书二选一将其隐藏）*/
.hidden{
  display: none
}

/*收书界面*/
.getBook{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

/*放置书籍封面区域*/
.bookCover{
  width: 46%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #efefef;
  margin: 10rpx 0 10rpx 10rpx;
}

/*书籍封面图片格式*/
.myImage{
  width: 300rpx;
  height: 400rpx;
}

/*送书界面*/
.achieveWish{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/*送书信息*/
.bookMessages{
  width: 94%;
  height: 80rpx;
  display: flex;
  margin: 20rpx 2% 20rpx 2%;
  font-size: 40rpx;
  color: #444;
}

/*收书按钮*/
.getBt_normal{
  width: 300rpx;
  height: 100rpx;
  background-color: #dd2211;
  color: #fff;
  font-size: 40rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 360rpx;
  border: 1rpx solid #444;
  box-shadow: 0 10rpx 10rpx #444;
}
/*收书按钮（点击）*/
.getBt_pressed{
  width: 300rpx;
  height: 100rpx;
  background-color: #bb1100;
  color: #fff;
  font-size: 40rpx;
  font-weight: 900;
  border-radius: 20rpx;
  position: absolute;
  top: 370rpx;
  border:1rpx solid #444;
  box-shadow: 0 0 0 #fff;
}

/*送书按钮*/
.sendBt_normal{
  width: 300rpx;
  height: 100rpx;
  background-color: #dd2211;
  color: #fff;
  font-size: 40rpx;
  border-radius: 20rpx;
  border: 1rpx solid #444;
  margin-left: 50%;
  box-shadow: 0 10rpx 10rpx #444;
}

/*送书按钮（点击）*/
.sendBt_pressed{
  width: 300rpx;
  height: 100rpx;
  background-color: #bb1100;
  color: #fff;
  font-size: 40rpx;
  font-weight: 900;
  border-radius: 20rpx;
  border:1rpx solid #444;
  margin-left: 50%;
  margin-top: 10rpx;
  box-shadow: 0 0 0 #fff; 
}