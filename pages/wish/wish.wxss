/* pages/wish/wish.wxss */

/*Tap*/
.myTap{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

/*悬赏值填写区域*/
.rewardView{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  background-color: #ccc;
  transition: height 200ms;
}
/*悬赏值填写区域-隐藏*/
.rewardView_hidden{
  width: 100%;
  height: 0;
  display: flex;
  flex-direction: column;
  background-color: #ccc;
  transition: height 200ms;
}

/*存放标题和其说明的view*/
.labView{
  width: 100%;
  height: 100%;
  margin-left: 20rpx;
  background-color: transparent;
  display: flex;
  flex-direction: column;
}

/*标签*/
.myLab{
  margin: 30rpx 0 30rpx 0;
}

/*输入框*/
.myInput{
  width: 96%;
  height: 60rpx;
  background-color: #fff;
  border: 1rpx solid #1995f4;
  margin: 20rpx 2% 20rpx 2%;
}

/*按钮（大）*/
.mybt{
  width: 96%;
  margin: 20rpx 2% 20rpx 2%;
}