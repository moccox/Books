/* pages/mybk/mybk.wxss */
/*背景*/
.background{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/*项目页*/
.myScroll{
  width: 98%;
  height: 400rpx;
  background-color: rgb(224, 224, 224);
  display: flex;
  flex-direction: column;
  margin: 10rpx 1% 0 1%;
}

/*项目区域*/
.item{
  width: 90%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
  margin: 20rpx 5% 20rpx 5%;
  box-shadow: 10rpx 10rpx #bbb;
}

/*项目区域左边部分*/
.item_inside_left{
  width: 90%;
  height: 100%;
  font-size: 40rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

/*滚动条设置为透明*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
::-webkit-scrollbar-track{
  width: 0;
  height: 0;
  color: transparent;
}