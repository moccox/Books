/* pages/index/index.wxss */

/*搜索栏*/
.searchingbar{
  width: 100%;
  height: 70rpx;
  background-color: rgb(224, 224, 224);
  display: flex;
  align-items: center;
}

/*定位栏*/
.locationbar{
  width: 100%;
  height:70rpx;
  background-color: #1995f4;
  display: flex;
  flex-direction: row;
}

/*公告/广告栏*/
.adbar{
  width: 100%;
  height: 300rpx;
  background-color: rgb(224,224,224);
  display: flex;
}

/*广告/公告滑块*/
.adSwiper{
  width:90%;
  height: 90%;
  margin: 2% 5% 2% 5%;
  background-color: #fff;
  display: flex;
}

/*导航栏*/
.navigationbar{
  width: 100%;
  height: 100rpx;
  margin-top: 370rpx;
  color: #a8a8a8;
  background-color: #fff;
  display: flex;
  position: absolute;
  left: 0;
  top: 70rpx;
  z-index: 2;
  flex-direction: row;
  text-align: center;
  box-sizing: border-box;
}
/*导航栏-吸顶*/
.navigationbar_top{
  width:100%;
  height: 100rpx;
  color: #a8a8a8;
  background-color: #fff;
  display: flex;
  position: fixed;
  top: 0;
  z-index: 2;
  flex-direction: row;
  text-align: center;
  box-sizing: border-box;
}

/*返回顶部*/
.toTopView{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: transparent;
  position: fixed;
  z-index: 2;
  bottom: 0;
}
/*返回顶部-平时隐藏*/
.toTopView_hidden{
  width: 100%;
  height: 60rpx;
  display: none;
  position: fixed;
  z-index: 2;
  bottom: 0;
}

/*导航栏单个项目*/
.navbarItem{
  flex: 1;
  padding: 26rpx 0rpx;
}

/*导航栏被选中项目*/
.navbarItem_active{
  transition: all 0.3s;
  border-bottom: 10rpx inset #1995f4;
  color: #1995f4;
}

/*搜索按钮（大）*/
.searchingbt{
  width: 90%;
  height: 80%;
  background-color: #fff;
  font-size: 23rpx;
}

/*按钮（小）*/
.minibt{
  margin: 10rpx 20rpx 10rpx 20rpx;
  font-size: 23rpx;
  color:#1995f4;
  white-space: nowrap;
}

/*输入框*/
.myInput{
  width: 60%;
  height: 80%;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  margin: 10rpx 0 10rpx 10rpx;
}

/*为将搜索样式1隐藏而建的view*/
.searchingbt_hidden{
  width: 90%;
  height: 80%;
  display: none;
}

/*存放搜索栏样式2的view*/
.searchingbar_inside{
  width: 100%;
  height: 70rpx;
  background-color: rgb(224, 224, 224);
  display: flex;
  flex-direction: row;
}

/*为将搜索样式2隐藏而建的view*/
.searchingbar_inside_hidden{
  display: none;
}

/*项目页*/
.scrollView{
  padding-top: 100rpx;
  height: 1000rpx;
  width: 100%;
  background-color:rgb(224, 224, 224);
}

/*项目页滑块*/
.swiperView{
  width: 100%;
  height: 100%;
}

/*项目页内容单项*/
.books_item{
  width: 96%;
  height: 320rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  margin: 30rpx 2% 30rpx 2%;
  box-shadow: 10rpx 10rpx 10rpx #666;
}

/*内容单项内部*/
.books_item_inside{
  width: 100%;
  height: 80rpx;
  color: #444;
  margin-left: 30rpx;
}

/*标签（白色）*/
.myLab{
  width: 80%;
  height: 45rpx;
  line-height: 44rpx;
  color: #fff;
  margin: 10rpx 60rpx 10rpx 60rpx;
  /*↓长度溢出自动省略↓*/
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*图片*/
.myImage{
  width: 100%;
  height: 100%;
}

/*滚动条*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
::-webkit-scrollbar-track{
  width: 0;
  height: 0;
  color: transparent;
}